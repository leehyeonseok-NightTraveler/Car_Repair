<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.dao.MypageDAO">

    <!-- 차량 등록 -->
    <insert id="insertCar" parameterType="com.boot.dto.MypageDTO">
        INSERT INTO tbl_mypage (car_number, account_id, car_model, car_type)
        VALUES (#{car_number}, #{account_id}, #{car_model}, #{car_type})
    </insert>

    <!-- 내 차량 목록 -->
    <select id="selectCarList" parameterType="string" resultType="com.boot.dto.MypageDTO">
        SELECT * FROM tbl_mypage
        WHERE account_id = #{account_id}
        ORDER BY car_number
    </select>

    <!-- 차량 삭제 -->
    <delete id="deleteCar" parameterType="string">
        DELETE FROM tbl_mypage WHERE car_number = #{car_number}
    </delete>

</mapper>
